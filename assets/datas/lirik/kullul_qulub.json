{
    "verses": [
      {
        "arabic": "كُلُّ الْقُلُوْبِ إِلى الْحَبِيْبِ تَمِيْلُ",
        "romaji": "Kullul qulubi ilal habibi tamiil",
        "translation": "Setiap hati condong kepada sang kekasih (Nabi Muhammad SAW)."
      },
      {
        "arabic": "وَمَعِي بِذَلِكَ شَاهِدٌ وَ دَلِيْلٌ",
        "romaji": "Wa ma'iy bidzalika Syahidun wa dalil",
        "translation": "Padanya terdapat tanda-tanda dan bukti."
      },
      {
        "arabic": "أَمَّا الدَّلِيْلُ إِذَا ذَكَرْتُ مُحَمَّداً",
        "romaji": "Ammad-dalilu idza dzakartu Muhammadan",
        "translation": "Tandanya adalah ketika aku menyebut nama Nabi Muhammad SAW."
      },
      {
        "arabic": "صَارَتْ دُمُوْعُ العَاشِقِيْنَ تَسِيْلُ",
        "romaji": "Shorot dumu'ul 'asyiqina tasiil",
        "translation": "Maka mengalirlah air mata orang yang memendam rindu."
      },
      {
        "arabic": "هَذَا رَسُوْلُ الله هَذَا الْمُصْطَفَى",
        "romaji": "Hadza Rosulullahi",
        "translation": "Dialah Rasulullah SAW, dialah insan terpilih."
      },
      {
        "arabic": "هَذَا لِرَبِّ الْعَالَمِيْنَ خَلِيْلٌ",
        "romaji": "Hadza lirobbil 'alamina kholil",
        "translation": "Dialah kekasihnya Allah SWT, Tuhan seluruh alam."
      }
    ],
    "arabicText": "كُلُّ الْقُلُوْب"
  }
  